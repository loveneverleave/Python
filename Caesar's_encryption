eng_lower_alphabet = 'abcdefghijklmnopqrstuvwxyz'
eng_upper_alphabet = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
rus_lower_alphabet = "абвгдежзийклмнопрстуфхцчшщъыьэюя"
rus_upper_alphabet = "АБВГДЕЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ"
y = ''
print('Encryption or decryption? Encryption - en, decription - de')
action = input()
print('Choose language. English - eng, Russian - ru')
lang = input()
print('The shift amount')
shift = int(input())
print('Enter data')
data= input()
if lang == 'ru':
    if action == 'en':
        for c in data:
            if c.upper() == c and c.isalpha() == True:
                i = rus_upper_alphabet.find(c) + shift
                if i > 31:
                    i = i - 32
                data = data.replace(c, rus_upper_alphabet[i], 1)
            elif c.lower() == c and c.isalpha() == True:
                i = rus_lower_alphabet.find(c) + shift
                if i > 31:
                    i = i - 32
                data = data.replace(c, rus_lower_alphabet[i], 1)
    elif action == 'de':
        for c in data:
            if c.upper() == c and c.isalpha() == True:
                i = rus_upper_alphabet.find(c) - shift
                if i < 0:
                    i = i + 32
                data = data.replace(c, rus_upper_alphabet[i], 1)
            elif c.lower() == c and c.isalpha() == True:
                i = rus_lower_alphabet.find(c) - shift
                if i < 0:
                    i = i - 32
                data = data.replace(c, rus_lower_alphabet[i], 1)
if lang == 'eng':
    if action == 'en':
        for c in data:
            if c.upper() == c and c.isalpha() == True:
                i = eng_upper_alphabet.find(c) + shift
                if i > 31:
                    i = i - 32
                data = data.replace(c, eng_upper_alphabet[i], 1)
            elif c.lower() == c and c.isalpha() == True:
                i = eng_lower_alphabet.find(c) + shift
                if i > 31:
                    i = i - 32
                data = data.replace(c, eng_lower_alphabet[i], 1)
    elif action == 'de':
        for c in data:
            if c.upper() == c and c.isalpha() == True:
                i = eng_upper_alphabet.find(c) - shift
                if i < 0:
                    i = i + 32
                data = data.replace(c, eng_upper_alphabet[i], 1)
            elif c.lower() == c and c.isalpha() == True:
                i = eng_lower_alphabet.find(c) - shift
                if i < 0:
                    i = i - 32
                data = data.replace(c, eng_lower_alphabet[i], 1)
print(data)
